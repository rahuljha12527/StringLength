#include <iostream>
using namespace std;
void length(char input[]){
         
         int counter=0;
         for(int i=0;input[i]!='\0';i++){
                  counter++;
         }
         
      cout<<counter<<endl;   
}

int main() {
    
    char input[1000];
    cin.getline(input,1000);        
    length(input);
    //cout<<input<<endl;
    return 0;
}
